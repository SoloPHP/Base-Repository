{
  "name": "solophp/base-repository",
  "type": "library",
  "description": "Base repository pattern implementation for PHP applications",
  "keywords": ["repository", "pattern", "crud", "php", "psr", "php8", "strict-types"],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\BaseRepository\\": "src/"
    }
  },
  "require": {
    "php": "^8.3",
    "doctrine/dbal": "^4.3"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0",
    "squizlabs/php_codesniffer": "^3.13"
  },
  "scripts": {
    "cs-check": "phpcs --standard=PSR12 src/",
    "cs-fix": "phpcbf --standard=PSR12 src/",
    "analyze": "phpstan analyze",
    "test": [
      "@cs-check",
      "@analyze"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}